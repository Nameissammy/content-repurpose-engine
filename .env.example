# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@db:5432/content_repurpose
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=content_repurpose

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Server Configuration
PORT=8000
WORKERS=4
LOG_LEVEL=info

# AI/LLM Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# YouTube Configuration (no API key needed for transcript fetching)
# Transcripts are fetched directly from YouTube's public API

# Twitter/X API v2
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# LinkedIn API
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# Instagram API
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_account_id

# Email/Newsletter Service
EMAIL_PROVIDER=resend  # or sendgrid
RESEND_API_KEY=your_resend_api_key
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=newsletter@yourdomain.com

# Feature Flags
ENABLE_AUTO_PUBLISH=false
ENABLE_EMAIL_NOTIFICATIONS=true
MAX_CONCURRENT_JOBS=3

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
